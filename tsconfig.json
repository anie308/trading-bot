{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "allowJs": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "lib": [
        "ES6"
      ],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [
        "src/types"
      ]
    },
    "include": [
      "src/**/*",
      "tests/**/*",
      ".d.ts"
    ],
    "exclude": [
      "dist"
    ]
  }